<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/splash_image"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:src="@drawable/powerimg"
        android:layout_centerInParent="true"
        android:paddingBottom="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/splash_image"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/splash_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_pt1"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/green_title"/>

        <TextView
            android:id="@+id/splash_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/title_pt2"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/blue_tite"/>

    </LinearLayout>



</RelativeLayout>